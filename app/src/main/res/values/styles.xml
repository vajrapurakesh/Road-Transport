<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tab_base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="splash_theme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimary">@color/action_bar</item>
        <item name="colorPrimaryDark">@color/accent</item>
    </style>

    <style name="main_theme" parent="tab_base">
        <item name="colorPrimary">@color/action_bar</item>
        <item name="colorPrimaryDark">@color/accent</item>
    </style>

    <style name="about_card">
        <item name="android:layout_marginTop">@dimen/about_card_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/about_card_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/about_card_margin_left</item>
        <item name="android:layout_marginRight">@dimen/about_card_margin_right</item>
    </style>

    <style name="about_card_inner">
        <item name="android:paddingTop">@dimen/card_expand_native_layout_padding_top</item>
        <item name="android:paddingBottom">@dimen/card_expand_native_layout_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/card_expand_native_layout_padding_left</item>
        <item name="android:paddingRight">@dimen/card_expand_native_layout_padding_right</item>
    </style>

    <style name="ToolTipLayoutDefaultStyle">
        <item name="ttlm_padding">20dip</item>
        <item name="ttlm_backgroundColor">@color/accent</item>
        <item name="ttlm_strokeWeight">0dip</item>
        <item name="ttlm_cornerRadius">10dip</item>
        <item name="ttlm_overlayStyle">@style/ToolTipOverlayCustomStyle</item>
        <item name="android:textAppearance">@style/ToolTipTextStyle</item>
    </style>

    <style name="ToolTipTextStyle">
        <item name="android:textColor">@color/card_backgroundExpand</item>
    </style>

    <style name="ToolTipOverlayCustomStyle">
        <item name="android:color">@color/action_bar</item>
        <item name="ttlm_repeatCount">999</item>
        <item name="ttlm_duration">1000</item>
        <item name="android:alpha">0.2</item>
        <item name="android:layout_margin">8dp</item>
    </style>

</resources>